
  <div class="padding1 border-radius05 shadow-boxing marginb">
    <div class="table-responsive">
      <table class="table">

        <thead>
          <tr class="text-center black font-white">
            <th colspan="6"><%= link_to(data["fund"].best_name + " " + data["date"].to_formatted_s(:long_ordinal), fund_path(data["fund"].id))  %></th>
          </tr>
        </thead>

        <tbody>

         <tr class="text-center black font-white">
          <td colspan="1">Cota</td>
          <td colspan="1">PL</td>

          <td colspan="1">Volatilidade EWMA 94%</td>
          <td colspan="1">Sharpe ratio</td>
          <td colspan="1">Tracking error</td>
        </tr>

        <tr class="text-center" >
          <td><%= data["share_price"].round(4)%></td>
          <td><%= number_with_delimiter(data["aum"].round(0), :delimiter => ',')%></td>

          <td><%= sprintf("%+.2f", data["volatility"].round(2))%>%</td>
          <td><%= sprintf("%+.2f", data["sharpe_ratio"].round(2))%></td>
          <td><%= sprintf("%+.2f", data["tracking_error"].round(2))%>%</td>
        </tr>

        <tr class="text-center black font-white">
          <td colspan="2">Dado</td>

          <td colspan="1">Mensal</td>
          <td colspan="1">Trimestral</td>
          <td colspan="1">Annual</td>
        </tr>

        <tr class="text-center">
          <td colspan="2">Retorno</td>

          <td><%= sprintf("%+.2f", data["return_monthly_value"].round(2))%>%</td>
          <td><%= sprintf("%+.2f", data["return_quarterly_value"].round(2))%>%</td>
          <td><%= sprintf("%+.2f", data["return_annual_value"].round(2))%>%</td>
        </tr>

        <tr class="text-center">
          <td colspan="2">Ret/Bench</td>

          <td><%= sprintf("%+.2f", data["return_over_benchmark_monthly_value"].round(2))%>%</td>
