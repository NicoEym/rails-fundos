          <td><%= sprintf("%+.2f", data["return_over_benchmark_annual_value"].round(2))%>%</td>
        </tr>

         <tr class="text-center">
          <td colspan="2">Capt Liq</td>

          <td><%= number_with_delimiter(data["application_monthly_net_value"].round(0), :delimiter => ',') %></td>
          <td><%= number_with_delimiter(data["application_quarterly_net_value"].round(0), :delimiter => ',') %></td>
          <td><%= number_with_delimiter(data["application_annual_net_value"].round(0), :delimiter => ',') %></td>
