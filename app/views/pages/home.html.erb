<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1586190022484-455f9692c4d6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">
  <div class="container-home">
    <div id="landing-page-form" class="col-xs-9 col-md-6">
      <h1>Fundos</h1>
      <p >A plataforma digital de monitoramento da industria de fundos do Indosuez DTVM</p>
      <% if user_signed_in? %>

        <div>
          <% @areas.each do |area|  %>
            <div class="button-box">
              <%= link_to area.name, funds_path(:area => area), class:"btn-outline" %>
            </div >
        <% end %>
      </div>

      <% else %>

        <div>
          <div class="button-box">
            <%= link_to("Log in", new_user_session_path, class:"btn-outline")  %>
          </div >
          <div class="button-box">
            <%= link_to("Sign up", new_user_registration_path, class:"btn-outline")  %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
